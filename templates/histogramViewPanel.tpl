<span class="btn-group" role="group">
    <span class="datadim-btn btn btn-default btn-xs active" datadim-type="flowsize">
        <!--btn-default和btn-xs都控制了btn的样式-->
        <span class="glyphicon glyphicon-sort"></span>
    </span>
    <span class="datadim-btn btn btn-default btn-xs" datadim-type="nodenum">
        <span class="glyphicon glyphicon-th"></span>
    </span>
    <span class="sort-btn btn btn-default btn-xs active" sort-type="time">
        <span class="glyphicon glyphicon-time"></span>
    </span>
    <span class="sort-btn btn btn-default btn-xs" sort-type="size">  
        <span class="glyphicon glyphicon-signal"></span>
    </span>
    <span class="btn btn-default btn-xs" id="help">  
        <span class="glyphicon glyphicon-exclamation-sign"></span>
    </span>
</span>
